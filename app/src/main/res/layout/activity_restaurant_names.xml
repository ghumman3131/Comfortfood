<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_names"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gursewak.comfortfood.Restaurant_names"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#e90e0e"
            android:id="@+id/restaurant_names">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="30dp"
        android:text="RESTAURANT NAMES"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"

        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="KESAR DA DHABA"
            android:textColor="#000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/kesar_dhaba"
            android:layout_below="@id/restaurant_names"
            android:onClick="kesar_dhaba"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="KULCHA LAND"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/kulcha_land"
            android:layout_below="@id/kesar_dhaba"
            android:onClick="kulcha_land"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="BHARAWAN DA DHABA"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/bharawan_dhaba"
            android:layout_below="@id/kulcha_land"
            android:onClick="bharawan_dhaba"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="CRYSTAL RESTAURANT"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/crystal_restaurant"
            android:layout_below="@id/bharawan_dhaba"
            android:onClick="crystal_restaurant"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="FOOD VILLA"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/food_villa"
            android:layout_below="@id/crystal_restaurant"
            android:onClick="food_villa"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="SHUDH"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/shudh"
            android:layout_below="@id/food_villa"
            android:onClick="shudh"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="SARHAD"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/sarhad"
            android:layout_below="@id/shudh"
            android:onClick="sarhad"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="MAKHAN RESTAURANT"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/makhan_restaurant"
            android:layout_below="@id/sarhad"
            android:onClick="makhan_restaurant"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="HAVELI"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/haveli"
            android:layout_below="@id/makhan_restaurant"
            android:onClick="haveli"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="SANJHA CHULA"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/sanjha_chulha"
            android:layout_below="@id/haveli"
            android:onClick="sanjha_chulha"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="BROTHER DHABA"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/brother_dhaba"
            android:layout_below="@id/sanjha_chulha"
            android:onClick="brother_dhaba"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="CHARMING CHICKEN"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/charming_chicken"
            android:layout_below="@id/brother_dhaba"
            android:onClick="charming_chicken"
            />
        </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#fff"
            android:id="@+id/first_lyout"

            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/svg_user"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/image_et"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUEST"
                android:textSize="40dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/image_et"
                android:id="@+id/textview_1"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#918b8b"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/knife"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/edit_text"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/edit_text"
                android:id="@+id/restarant"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/knife"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/edit_text1"
                android:layout_below="@id/edit_text"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/edit_text1"
                android:id="@+id/menu"
                android:layout_below="@id/restarant"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/man"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/profile"
                android:layout_below="@id/edit_text1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/profile"
                android:layout_below="@id/menu"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/list"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/order"
                android:layout_below="@id/profile"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/order"
                android:layout_below="@id/profile"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/Offers"
                android:layout_below="@id/order"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offers"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/edit_text"
                android:layout_below="@id/order"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/knife"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/Invite"
                android:layout_below="@id/Offers"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/edit_text"
                android:layout_below="@id/Offers"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/knife"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/sendfeedback"
                android:layout_below="@id/Invite"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send feedback"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/edit_text"
                android:layout_below="@id/Invite"
                />
        </RelativeLayout>






    </LinearLayout>

</RelativeLayout>
